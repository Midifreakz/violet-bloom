<theme>
<formatVersion>4</formatVersion>
<include>./../theme.xml</include>


<view name="system">
    <!-- ✅ Moved the System Logo Image OUTSIDE the text elements -->
    <image name="system_logo" extra="true">
      <path>./systemlogo.svg</path>  <!-- Dynamically loads from each system folder -->
      <tile>false</tile>
      <origin>0 0</origin>
      <pos>0.12 0.174</pos>
      <maxSize>0.6 0.14</maxSize>
    </image>

    <image name="console" extra="true">
        <path>./console_n64.png</path>
        <tile>false</tile>
        <origin>0.5 1</origin>
        <pos>0.62 1.0</pos>
        <maxSize>0.62 0.62</maxSize>
    </image>

    <image name="controller" extra="true">
        <path>./controller_n64.png</path>
        <tile>false</tile>
        <origin>0 1</origin>
        <pos>0.12 0.88</pos>
        <maxSize>0.20 0.20</maxSize>
    </image>

  <text name="shortdescription" extra="true">
    <text>1996  ·  64-bit Console</text>
  </text>

  <text name="longdescription" extra="true">
    <text>The N64 was the last major home console to use the cartridge as its primary storage format until Nintendo's seventh console, the Nintendo Switch.</text>
  </text>
 </view>
   <!-- N64 Specific Device Fix-->

<view name="detailed, video, grid">

    <image name="console" extra="true">
        <maxSize>0.55 0.55</maxSize>
        <pos>0.81783 0.68729</pos>
    </image>

    <image name="controller" extra="true">
        <pos>0.7 0.552</pos>
        <maxSize>0.14 0.14</maxSize>
    </image>

 </view>
  
</theme>
