<theme>
<formatVersion>4</formatVersion>
<include>./../theme.xml</include>


<view name="system">
    <!-- âœ… Moved the System Logo Image OUTSIDE the text elements -->
    <image name="system_logo" extra="true">
      <path>./systemlogo.svg</path>  <!-- Dynamically loads from each system folder -->
      <tile>false</tile>
      <origin>0 0</origin>
      <pos>0.12 0.178</pos>
      <maxSize>0.6 0.14</maxSize>
    </image>
    
    <image name="console" extra="true">
        <path>./console_auto-favorites.png</path>
        <tile>false</tile>
        <origin>0.5 1</origin>
        <pos>0.62 1.0</pos>
        <maxSize>0.62 0.62</maxSize>
    </image>

    <image name="controller" extra="true">
        <path>./controller_auto-favorites.png</path>
        <tile>false</tile>
        <origin>0 1</origin>
        <pos>0.12 0.88</pos>
        <maxSize>0.20 0.20</maxSize>
    </image>

  <text name="shortdescription" extra="true">
   <text>All Consoles / Handhelds / Arcade</text>
  </text>
  <text name="longdescription" extra="true">
   <text>Access and quickly play all your favorite games from across the entire library. Great place to start if it's a bit overwhelming or for a quick sit.</text>
  </text>
 </view>


<!-- EDIT VIEW LIST  -->

<view name="detailed, video, grid">
    <!-- Override background image -->
    <image name="background" extra="true">
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
        <path>./video_view_background_favorites.jpg</path> <!-- New Background -->
    </image>

    <!-- Expand the gamelist -->
    <textlist name="gamelist">
        <pos>0.512875 0.1526666666666667</pos>
        <size>0.3375 0.7690011666666667</size>
    </textlist>

    <!-- Console image adjustment -->
    <image name="console" extra="true">
        <origin>0 1</origin>
        <pos>0.79583 1</pos>
    </image>

    <!-- Hide covers and controller -->
    <image name="controller">
        <pos>-2 -2</pos>  <!-- Moves it completely off-screen -->
        <maxSize>000001 0.000001</maxSize>
    </image>

    <image name="md_thumbnail">
        <maxSize>000001 0.000001</maxSize>
    </image>
</view>

</theme>
