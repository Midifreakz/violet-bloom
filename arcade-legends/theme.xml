<theme>
<formatVersion>4</formatVersion>
<include>./../theme.xml</include>

<!-- EDIT SYSTEM LIST -->

<view name="system">

    <image name="system_logo" extra="true">
      <path>./systemlogo.svg</path>  <!-- Dynamically loads from each system folder -->
      <tile>false</tile>
      <origin>0 0</origin>
      <pos>0.12 0.148</pos>
      <maxSize>0.4 0.179</maxSize>
    </image>

    <image name="console" extra="true">
      <path>./console_arcade legends.png</path>
      <tile>false</tile>
      <origin>0.5 1</origin>
      <pos>0.62 1.0</pos>
      <maxSize>0.62 0.62</maxSize>
      </image>

    <image name="controller" extra="true">        
      <path>./controller_arcade legends.png</path>        
      <tile>false</tile>        
      <origin>0 1</origin>       
      <pos>0.12 0.88</pos>       
      <maxSize>0.20 0.20</maxSize>    
      </image>
      
    <text name="shortdescription" extra="true">
      <text>Game List  Â·  Arcade</text>
    </text>

    <text name="longdescription" extra="true">
      <text>Only the biggest legends of the arcade halls. Discover where it all began with Pong, Pac-Man and see the evolution of arcade games with all the good stuff.</text>
    </text>

</view>


<!-- EDIT VIEW LIST  -->

<view name="detailed, video, grid">

<!-- Expand the gamelist and put the console in bottom right -->


    <textlist name="gamelist">
     <pos>0.512875 0.1526666666666667</pos>
     <size>0.3375 0.7690011666666667</size>
    </textlist>

    <image name="console" extra="true">
        <origin>0 1</origin>
        <pos>0.79583 1</pos>
    </image>


<!-- Hide covers and controller -->


    <image name="controller" extra="true">
      <pos>-2 -2</pos>  <!-- Moves it completely off-screen -->
      <maxSize>000001 0.000001</maxSize>
    </image>

    <image name="md_thumbnail">
      <maxSize>000001 0.000001</maxSize>
    </image>


 </view>
</theme>