<theme>
<formatVersion>4</formatVersion>


<!-- Systems view -->

<view name="system">

    <image name="background" extra="true">
        <path>./_art/images/unisystem_background.jpg</path>
        <tile>false</tile>
        <size>1 1</size>
        <pos>0 0</pos>
        <origin>0 0</origin>
    </image>

    <image name="poster" extra="true">
        <path>./_art/posters/${system.theme}.jpg</path>
        <tile>false</tile>
        <origin>1 0</origin>
        <pos>1 0</pos>
        <size>0 1</size>
    </image>

    <carousel name="systemcarousel">
        <type>vertical</type>
        <color>00000000</color>
        <origin>1 1</origin>
        <pos>1 1</pos>
        <size>0.01 0.01</size>
        <logoScale>1</logoScale>
        <logoSize>0.01 0.01</logoSize>
        <maxLogoCount>0</maxLogoCount>
    </carousel>
    
    <text name="shortdescription" extra="true">
        <fontPath>./_art/fonts/SSTLight.TTF</fontPath>
        <alignment>left</alignment>
        <forceUppercase>0</forceUppercase>
        <fontSize>0.021</fontSize>
        <color>9b9a9a</color>
        <origin>0 0</origin>
        <pos>0.12 0.1055</pos>
        <size>0.320 0.033</size>
    </text>

    <text name="systemInfo">
        <fontPath>./_art/fonts/SSTLight.TTF</fontPath>
        <alignment>left</alignment>
        <backgroundColor>00000000</backgroundColor>
        <forceUppercase>0</forceUppercase>
        <color>372d5a</color>
        <origin>0 0</origin>
        <pos>0.12 0.3611</pos>
        <size>0.200 0.039</size>
        <fontSize>0.0315</fontSize>
    </text>
    
    <text name="longdescription" extra="true">
        <fontPath>./_art/fonts/SSTLight.TTF</fontPath>
        <alignment>left</alignment>
        <forceUppercase>0</forceUppercase>
        <fontSize>0.021</fontSize>
        <color>8F8F8F</color>
        <lineSpacing>1.58</lineSpacing>
        <origin>0 0</origin>
        <pos>0.12 0.360</pos>
        <size>0.28 0.20</size>
    </text>

    <image name="buttonA" extra="true">
        <path>./_art/var/button.svg</path>
        <tile>false</tile>
        <origin>0 0</origin>
        <pos>0.12 0.565</pos>
        <size>0 0.044</size>
    </image>

    <helpsystem name="help">
        <fontPath>./_art/fonts/SSTRg.TTF</fontPath>
        <fontSize>0.02</fontSize>
        <origin>1 1</origin><!--0 0-->
        <pos>0.12 0</pos> <!--0.0890 0.6283-->
        <textColor>F8F8F8</textColor>
        <iconColor>F8F8F8</iconColor>
    </helpsystem>

</view>




<!-- Game selector > Video View - (All views are the same for now) -->

<view name="detailed, video, grid">

<!-- Background when browsing games-->

      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>false</tile>
         <path>./_art/images/video_view_background.jpg</path>
      </image>

<!-- System Logo & Game Name -->

      <image name="logo">
         <path>./${system.theme}/systemlogo.svg</path>  <!-- Dynamically system logo -->
         <origin>0 0</origin>
         <pos>0.517 0.0694444444444444</pos>
         <maxSize>0.734375 0.0955555555555556</maxSize>
      </image>

      <text name="md_name">
         <origin>0 0</origin>
         <pos>0.12 0.099994444444444</pos>
         <size>0.26 0.0322222222222222</size> <!-- Width adjusted to not exceed 12% margin on the right -->
         <fontPath>./_art/fonts/SSTMedium.TTF</fontPath>
         <fontSize>0.0362222222222222</fontSize>
         <color>FFFFFF</color>
         <alignment>left</alignment>
         <lineSpacing>1.2</lineSpacing>
      </text>





