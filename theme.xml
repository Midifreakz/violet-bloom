         <size>0.3375 0.3290011666666667</size>
         <alignment>left</alignment>
         <lineSpacing>1.4</lineSpacing>  <!-- Decrease to reduce gap -->
         <horizontalMargin>0.00625</horizontalMargin>
      </textlist>



<!-- cover -->
         <image name="md_thumbnail">
            <origin>1 1</origin>
