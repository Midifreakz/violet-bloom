</view>








<!-- VIDEO  -->

<feature supported="video">
      <view name="video">
         <image name="crt-bezel" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.245 0.3666666666666667</pos>
            <maxSize>0.2671875 0.3638888888888889</maxSize>
            <path>./_art/images/crt-bezel.svg</path>
         </image>
         <video name="md_video">
            <origin>0.5 0.5</origin>
            <pos>0.245 0.3666666666666667</pos>
            <maxSize>0.25 0.3333333333333333</maxSize>
            <delay>0.9</delay>
            <default>./_art/videos/static.mp4</default>
            <showSnapshotNoVideo>false</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
         </video>
      </view>
   </feature>

   <feature supported="z-index">
      <view name="detailed,video">
         <image name="crt-bezel" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="crt-screen" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.245 0.3666666666666667</pos>
            <maxSize>0.25 0.3333333333333333</maxSize>
            <path>./_art/images/crt-screen.svg</path>
            <zIndex>60</zIndex>
         </image>
      </view>
      <view name="video">
         <image name="crt-bezel" extra="true">
            <zIndex>100</zIndex>
         </image>
         <video name="md_video">
            <zIndex>80</zIndex>
         </video>
      </view>
   </feature>

</theme>
