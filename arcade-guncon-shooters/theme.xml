<theme>
<formatVersion>4</formatVersion>
<include>./../theme.xml</include>


<view name="system">
    <!-- ✅ Moved the System Logo Image OUTSIDE the text elements -->
    <image name="system_logo" extra="true">
      <path>./systemlogo.svg</path>  <!-- Dynamically loads from each system folder -->
      <tile>false</tile>
      <origin>0 0</origin>
      <pos>0.12 0.148</pos>
      <maxSize>0.6 0.20</maxSize>
    </image>
    <image name="console" extra="true">
        <path>./console_Arcade Guncon Shooters.png</path>
        <tile>false</tile>
        <origin>0.5 1</origin>
        <pos>0.62 1.0</pos>
        <maxSize>0.62 0.62</maxSize>
    </image>
<image name="controller" extra="true">        <path>./controller_Arcade Guncon Shooters.png</path>        <tile>false</tile>        <origin>0 1</origin>        <pos>0.12 0.88</pos>        <maxSize>0.20 0.20</maxSize>    </image>
  <text name="shortdescription" extra="true">
   <text>Game List  ·  Arcade</text>
  </text>
  <text name="longdescription" extra="true">
   <text>A wide library of arcade shooting cabinets. Enjoy Duck Hunt And Time Crisis just like it's 1995.</text>
  </text>
 </view>


<!-- EDIT VIEW LIST  -->

<view name="detailed, video, grid">

<!-- Expand the gamelist and put the console in bottom right -->


    <textlist name="gamelist">
     <pos>0.512875 0.1526666666666667</pos>
     <size>0.3375 0.7690011666666667</size>
    </textlist>

    <image name="console" extra="true">
        <origin>0 1</origin>
        <pos>0.73583 1</pos>
    </image>


<!-- Hide covers and controller -->


    <image name="controller" extra="true">
      <pos>-2 -2</pos>  <!-- Moves it completely off-screen -->
      <maxSize>000001 0.000001</maxSize>
    </image>

    <image name="md_thumbnail">
      <maxSize>000001 0.000001</maxSize>
    </image>


 </view>
</theme>